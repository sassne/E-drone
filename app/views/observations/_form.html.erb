  <div class="bg-yellow-100 text-yellow-800 rounded-xl p-4 mb-4 text-center">
    Ce vol est terminé, vous ne pouvez plus ajouter d'observation.
  </div>
  <%= form_with(model: [@vole, @observation], local: true, class: "bg-white p-6 rounded-2xl shadow-xl max-w-xl mx-auto") do |f| %>
    <h2 class="text-xl font-semibold text-slate-700 mb-4">Ajouter une observation</h2>

    <% if @observation.errors.any? %>
      <div class="rounded border border-red-600 bg-red-50 px-5 py-4 mb-4">
        <h3 class="text-lg font-bold text-red-700"><%= pluralize(@observation.errors.count, "erreur") %> ont empêché l'enregistrement :</h3>
        <ul class="list-disc list-inside">
          <% @observation.errors.full_messages.each do |message| %>
            <li class="text-red-600"><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- Sélecteur de borne -->
    <div class="mb-4">
      <%= f.label :borne, "Borne", class: "block text-sm font-medium text-slate-600 mb-1" %>
      <%= f.text_field :borne, class: "w-full px-4 py-3 border border-gray-300 rounded-xl text-slate-700 focus:outline-none focus:ring-2 focus:ring-lime-400" %>
    </div>

    <!-- Type d'observation -->
    <div class="mb-4">
      <%= f.label :observation_type, "Type d'observation", class: "block text-sm font-medium text-slate-600 mb-1" %>
      <%= f.select :observation_type, [["Personne sur le pipe", "personne"], ["Voiture", "voiture"],["Single Side connexion", "Single Side connexion"], ["Disconnect Data", "Disconnect Data"], ["Autre", "autre"]], {}, class: "w-full px-4 py-3 border border-gray-300 rounded-xl text-slate-700 focus:outline-none focus:ring-2 focus:ring-lime-400" %>
    </div>

    <!-- Remarque -->
    <div class="mb-4">
      <%= f.label :remarque, "Remarque", class: "block text-sm font-medium text-slate-600 mb-1" %>
      <%= f.text_area :remarque, rows: 3, class: "w-full px-4 py-3 border border-gray-300 rounded-xl text-slate-700 focus:outline-none focus:ring-2 focus:ring-lime-400" %>
    </div>

    <!-- Bouton d'ajout -->
    <div class="flex justify-end">
      <%= f.submit "Ajouter", class: "bg-[#C8102E] hover:bg-[#a40e23] text-white font-semibold px-6 py-3 rounded-xl transition duration-200" %>
    </div>
  <% end %>
<script src="https://cdn.jsdelivr.net/npm/tom-select@2.2.2/dist/js/tom-select.complete.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/tom-select@2.2.2/dist/css/tom-select.css" rel="stylesheet">
<script>
  document.addEventListener('DOMContentLoaded', function() {
    if(document.querySelector('.tomselect')) {
      new TomSelect('.tomselect', { create: false, sortField: {field: "text", direction: "asc"} });
    }
  });
</script>
