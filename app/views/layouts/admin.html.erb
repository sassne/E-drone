<!DOCTYPE html>
<html>
  <head>
    <title>Admin | E-Drone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'tailwind', 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag 'admin_datatables' %>
    <link rel="stylesheet" href="https://cdn.datatables.net/2.3.2/css/dataTables.bootstrap5.min.css">
    <style>
      .dataTables_wrapper .dataTables_paginate .paginate_button {
        padding: 0.2em 1em;
        margin: 0 2px;
        border-radius: 4px;
        background: #f1f3f4;
        border: none;
      }
      .dataTables_wrapper .dataTables_paginate .paginate_button.current {
        background: #C8102E;
        color: #fff !important;
      }
      .dataTables_wrapper .dataTables_length select { width: auto; display: inline-block; }
      .dataTables_wrapper .dataTables_filter input {
        border-radius: 4px;
        border: 1px solid #ced4da;
        padding: 0.25em 0.5em;
      }
    </style>
  </head>
  <body class="bg-gray-50">
    <div class="flex flex-col min-h-screen">
      <div class="flex justify-end p-2 bg-white border-b">
        <%= render 'shared/language_switcher' %>
      </div>
      <div class="flex flex-1">
      <!-- Sidebar -->
      <aside id="default-sidebar" class="fixed top-0 left-0 z-40 w-64 h-screen transition-transform -translate-x-full sm:translate-x-0 bg-white shadow-lg">
        <div class="flex flex-col h-full">
          <div class="flex justify-center py-6 border-b border-gray-200">
            <%= link_to admin_dashboard_path do %>
              <%= image_tag 'icon.png', class: 'h-14', alt: 'E-Drone' %>
            <% end %>
          </div>
          <nav class="flex-1 overflow-y-auto px-4 py-6">
            <ul class="space-y-2 font-medium">
              <li>
                <%= link_to admin_dashboard_path, class: "flex items-center p-2 rounded-lg text-gray-700 hover:bg-gray-100 transition #{controller_name == 'dashboard' ? 'bg-gray-100 font-bold' : ''}" do %>
                  <svg class="w-5 h-5 text-gray-500 mr-3" fill="currentColor" viewBox="0 0 22 21">
                    <path d="M16.975 11H10V4.025a1 1 0 0 0-1.066-.998 8.5 8.5 0 1 0 9.039 9.039.999.999 0 0 0-1-1.066Z"/>
                    <path d="M12.5 0c-.157 0-.311.01-.565.027A1 1 0 0 0 11 1.02V10h8.975a1 1 0 0 0 1-.935c.013-.188.028-.374.028-.565A8.51 8.51 0 0 0 12.5 0Z"/>
                  </svg>
                  <span>Tableau de bord</span>
                <% end %>
              </li>
              <li>
                <%= link_to admin_drones_path, class: "flex items-center p-2 rounded-lg text-gray-700 hover:bg-gray-100 transition #{controller_name == 'drones' ? 'bg-gray-100 font-bold' : ''}" do %>
                  <svg class="w-5 h-5 text-gray-500 mr-3" fill="currentColor" viewBox="0 0 18 18">
                    <path d="M6.143 0H1.857A1.857 1.857 0 0 0 0 1.857v4.286C0 7.169.831 8 1.857 8h4.286A1.857 1.857 0 0 0 8 6.143V1.857A1.857 1.857 0 0 0 6.143 0Zm10 0h-4.286A1.857 1.857 0 0 0 10 1.857v4.286C10 7.169 10.831 8 11.857 8h4.286A1.857 1.857 0 0 0 18 6.143V1.857A1.857 1.857 0 0 0 16.143 0Zm-10 10H1.857A1.857 1.857 0 0 0 0 11.857v4.286C0 17.169.831 18 1.857 18h4.286A1.857 1.857 0 0 0 8 16.143v-4.286A1.857 1.857 0 0 0 6.143 10Zm10 0h-4.286A1.857 1.857 0 0 0 10 11.857v4.286c0 1.026.831 1.857 1.857 1.857h4.286A1.857 1.857 0 0 0 18 16.143v-4.286A1.857 1.857 0 0 0 16.143 10Z"/>
                  </svg>
                  <span>Drones</span>
                <% end %>
              </li>
              <li>
                <%= link_to admin_voles_path, class: "flex items-center p-2 rounded-lg text-gray-700 hover:bg-gray-100 transition #{controller_name == 'voles' ? 'bg-gray-100 font-bold' : ''}" do %>
                  <svg class="w-5 h-5 text-gray-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                    <path d="m17.418 3.623-.018-.008a6.713 6.713 0 0 0-2.4-.569V2h1a1 1 0 1 0 0-2h-2a1 1 0 0 0-1 1v2H9.89A6.977 6.977 0 0 1 12 8v5h-2V8A5 5 0 1 0 0 8v6a1 1 0 0 0 1 1h8v4a1 1 0 0 0 1 1h2a1 1 0 0 0 1-1v-4h6a1 1 0 0 0 1-1V8a5 5 0 0 0-2.582-4.377ZM6 12H4a1 1 0 0 1 0-2h2a1 1 0 0 1 0 2Z"/>
                  </svg>
                  <span>Vols</span>
                <% end %>
              </li>
              <li>
                <%= link_to admin_users_path, class: "flex items-center p-2 rounded-lg text-gray-700 hover:bg-gray-100 transition #{controller_name == 'users' ? 'bg-gray-100 font-bold' : ''}" do %>
                  <svg class="w-5 h-5 text-gray-500 mr-3" fill="currentColor" viewBox="0 0 20 18">
                    <path d="M14 2a3.963 3.963 0 0 0-1.4.267 6.439 6.439 0 0 1-1.331 6.638A4 4 0 1 0 14 2Zm1 9h-1.264A6.957 6.957 0 0 1 15 15v2a2.97 2.97 0 0 1-.184 1H19a1 1 0 0 0 1-1v-1a5.006 5.006 0 0 0-5-5ZM6.5 9a4.5 4.5 0 1 0 0-9 4.5 4.5 0 0 0 0 9ZM8 10H5a5.006 5.006 0 0 0-5 5v2a1 1 0 0 0 1 1h11a1 1 0 0 0 1-1v-2a5.006 5.006 0 0 0-5-5Z"/>
                  </svg>
                  <span>Utilisateurs</span>
                <% end %>
              </li>
              <li>
                <%= link_to admin_observations_path, class: "flex items-center p-2 rounded-lg text-gray-700 hover:bg-gray-100 transition #{controller_name == 'observations' ? 'bg-gray-100 font-bold' : ''}" do %>
                  <svg class="w-5 h-5 text-gray-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                    <circle cx="10" cy="10" r="8" stroke="currentColor" stroke-width="2" fill="none"/>
                    <path d="M10 6v4l3 3" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" fill="none"/>
                  </svg>
                  <span>Observations</span>
                <% end %>
              </li>
            </ul>
          </nav>
          <div class="px-4 py-4 mt-auto border-t border-gray-200">
            <%= button_to destroy_user_session_path, method: :delete, class: "w-full", data: { turbo_confirm: 'Êtes-vous sûr de vouloir vous déconnecter?' } do %>
              <div class="flex items-center justify-center px-4 py-2 rounded-lg text-white bg-[#C8102E] hover:bg-[#a90c25] transition">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2h6a2 2 0 012 2v1" />
                </svg>
                <span>Déconnexion</span>
              </div>
            <% end %>
          </div>
        </div>
      </aside>
      <!-- Main content -->
      <div class="flex-1 ml-64 min-h-screen">
        <main class="p-8">
          <div class="mb-8">
            <span class="inline-block px-4 py-1 rounded-full bg-[#C8102E] text-white text-xs font-bold uppercase tracking-widest shadow">E-DRONE ADMIN</span>
          </div>
          <% if notice %>
            <div class="mb-4 alert alert-success bg-green-100 text-green-800 px-4 py-2 rounded"><%= notice %></div>
          <% end %>
          <% if alert %>
            <div class="mb-4 alert alert-danger bg-red-100 text-red-800 px-4 py-2 rounded"><%= alert %></div>
          <% end %>
          <%= yield %>
        </main>
      </div>
    </div>
  </body>
</html>
