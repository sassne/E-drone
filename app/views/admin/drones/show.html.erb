<div class="max-w-2xl mx-auto mt-8">
  <div class="bg-white rounded-2xl shadow p-8 mb-6">
    <h2 class="text-xl font-semibold text-slate-700 mb-4">Détail du drone</h2>
    <p class="mb-2"><span class="font-bold">Numéro de série :</span> <%= @drone.serial_number || @drone.numero_de_serie %></p>
    <p class="mb-2"><span class="font-bold">Modèle :</span> <%= @drone.model || @drone.modele %></p>
    <p class="mb-2"><span class="font-bold">Type de batterie :</span> <%= @drone.battery_type %></p>
  </div>
  <%= link_to 'Retour', admin_drones_path, class: 'inline-block px-4 py-2 bg-[#C8102E] text-white text-sm rounded-lg hover:bg-[#FFB200] transition' %>
</div>
