<div class="max-w-2xl mx-auto mt-8">
  <div class="bg-white rounded-2xl shadow p-8 mb-6">
    <h2 class="text-xl font-semibold text-slate-700 mb-4">Détail du vol</h2>
    <p class="mb-2"><span class="font-bold">Drone :</span> <%= @vole.drone&.serial_number || @vole.drone&.numero_de_serie %></p>
    <p class="mb-2"><span class="font-bold">Pilotes :</span> <%= @vole.users.map(&:email).join(', ') %></p>
    <p class="mb-2"><span class="font-bold">Type de batterie :</span> <%= @vole.battery_type %></p>
    <p class="mb-2"><span class="font-bold">Date :</span> <%= @vole.date %></p>
    <p class="mb-2"><span class="font-bold">Durée :</span> <%= @vole.duration %></p>
    <p class="mb-2"><span class="font-bold">Statut :</span> <%= @vole.status %></p>
  </div>
  <%= link_to 'Retour', admin_voles_path, class: 'inline-block px-4 py-2 bg-[#C8102E] text-white text-sm rounded-lg hover:bg-[#FFB200] transition' %>
</div>
