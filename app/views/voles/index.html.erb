<div class="mt-5">
  <!-- Titre + bouton -->
  <div class="flex items-center justify-between mb-4">
    <h2 class="text-xl font-semibold text-slate-700">Liste des vols</h2>
    <%= link_to "Ajouter un vol", new_vole_path, class: "inline-block px-4 py-2 bg-[#C8102E] text-white text-sm rounded-lg hover:bg-[#FFB200] transition" %>
  </div>

  <!-- Tableau avec ombre -->
  <div class="overflow-x-auto bg-white rounded-2xl shadow">
    <table class="min-w-full table-auto">
      <thead class="align-middle bg-gray-200 text-sm text-left">
        <tr class="text-red-900">
          <th class="px-4 py-3">Drone</th>
          <th class="px-4 py-3">Date</th>
          <th class="px-4 py-3">Heure</th>
          <th class="px-4 py-3">Durée</th>
          <th class="px-4 py-3">Remarque</th>
          <th class="px-4 py-3">Actions</th>
        </tr>
      </thead>

      <tbody class="bg-white divide-y">
        <% @voles.each do |vole| %>
          <tr class="text-slate-700 border-b border-gray-300 hover:text-orange-500">
            <td class="px-4 py-3">
              <%= link_to vole.drone.nom, drone_path(vole.drone), class: "hover:text-primary" %>
            </td>
            <td class="px-4 py-3"><%= l vole.date.to_date, format: :long %></td>
            <td class="px-4 py-3"><%= l vole.date, format: :time %></td>
            <td class="px-4 py-3"><%= pluralize(vole.duree, 'minute') %></td>
            <td class="px-4 py-3"><%= vole.remarque %></td>
            <td class="px-4 py-3">
              <div class="flex space-x-2">
                <%= link_to vole_path(vole), class: "inline-block px-3 py-1 bg-[#FFB200] text-white text-sm rounded hover:bg-orange-400 transition" do %>
                  Voir
                <% end %>
                <%= link_to edit_vole_path(vole), class: "inline-block px-3 py-1 bg-[#C8102E] text-white text-sm rounded hover:bg-orange-600 transition" do %>
                  Modifier
                <% end %>
                <%= button_to vole_path(vole), method: :delete, data: { turbo_confirm: "Êtes-vous sûr de vouloir supprimer ce vol ?" }, class: "inline-block px-3 py-1 bg-red-600 text-white text-sm rounded hover:bg-red-700 transition" do %>
                  Supprimer
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
